<div class="container">
  <%= notice %>
  <div class="row">
    <%= render 'users/list', user: @user, book: @book_new %>
    
    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
            <tr>
              <td>
                <%= link_to user_path, target: "_self" do %>
                  <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size:"40x40" %>
                  <br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
              <td><%= @book.body %></td>
              <% if @book.user.id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn-sm btn-success"%></td>
                <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn-sm btn-danger", data: { confirm: "本当に消しますか？" } %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>