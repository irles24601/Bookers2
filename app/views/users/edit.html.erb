<div class="container">
  <h2>User info</h2>

  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h3><%= @user.errors.full_messages.count %> errors prohibited this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for(@user) do |f| %>
    <div class="field">
      <label for="user_name">Name</label>
      <%= f.text_field :name, class: "name" %>
    </div>
    <div class="field">
      <label for="user_image">Image</label>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user_image" %>
    </div>
    <div class="field">
      <label for="user_introduction">Introduction</label>
      <%= f.text_area :introduction, class: "introduction" %>
    </div>
    <div class="actions">
      <%= f.submit "Update User" %>
    </div>
  <% end %>
</div>