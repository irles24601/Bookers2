<div class="container">
  <h2>User info</h2>
  <%= form_for(@user) do |f| %>
    <div class="field">
      <label for="user_name">Name</label>
      <%= f.text_field :name, class: "name" %>
    </div>
    <div class="field">
      <label for="user_image">Image</label>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user_image" %>
    </div>
    <div class="field">
      <label for="user_introduction">Introduction</label>
      <%= f.text_area :introduction, class: "introduction" %>
    </div>
    <div class="actions">
      <%= f.submit "Update User" %>
    </div>
  <% end %>
</div>